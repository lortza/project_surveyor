<div class="right">
  <%= link_to 'Edit', edit_admin_survey_path(@survey), class: button_classes('warning') %>
  <%= link_to 'Back', admin_surveys_path, class: button_classes %>
</div> <!-- right -->

<h2><%= @survey.title %></h2>
<p><em><%= @survey.description %></em></p>

<hr>

<h2>Questions</h2>

<% @survey.questions.each do |question| %>
  <p><%= question.body %></p>
  <ul>
    <% question.options.each do |option| %>
      <li><%= option.body %></li>
    <% end %> <!-- options.each -->
  </ul>
<% end %> <!-- survey.each -->

