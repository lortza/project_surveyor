<%= form_for [:admin, survey] do |form| %>
  <%= render 'shared/errors', object: survey %>

  <%= form.label :title %>
  <%= form.text_field :title, id: :survey_title, class: 'form-control' %>

  <%= form.label :description %>
  <%= form.text_area :description, id: :survey_description, class: 'form-control' %>

  <%= form.submit class: "#{button_classes('success')} btn-block" %>
<% end %>
