<center><%= link_to 'Create a Survey', new_admin_survey_path, class: "#{button_classes}" %></center>

<hr>

<h2>My Surveys</h2>

<table class="<%= table_classes %>">
  <thead>
    <tr>
      <th>Survey</th>
      <th>Description</th>
      <th>Last Updated</th>
      <th>Times Taken</th>
    </tr>
  </thead>
  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= link_to survey.title, admin_survey_path(survey) %></td>
        <td><%= survey.description %></td>
        <td><%= survey.updated_at.to_date %></td>
        <td><%= survey.times_taken %></td>
      </tr>
    <% end %>
  </tbody>
</table>
